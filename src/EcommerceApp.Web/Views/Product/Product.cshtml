@model EcommerceApp.Application.ViewModels.Product.ProductDetailsForUserVM
@{
    ViewData["Title"] = @Model.Name;
}
<div class="row">
    <div class="col text-center my-2">
        <img src="@Model.ImageUrl" width="384" height="384" />
        </div>
        <div class="col text-center my-2">
            <div class="card text-center md-4">
                <h2>@Model.Name</h2>
                <h4 class="text-danger">Price: @Model.UnitPrice.ToString("C")</h4>
                <form class="d-lg-inline">
                    <div class="form-group mx-sm-3 mb-2">
                        <label>Quantity: </label>
                        <input type="number" value="1" min="1" name="quantity">
                        <button type="submit" class="btn btn-primary mb-2" asp-controller="Cart" asp-action="AddToCart"
                            asp-route-id="@Model.Id"><i class="fas fa-cart-plus"></i></button>
                    </div>
                </form>
                <h2><label>Product Description</label></h2>
                <p>@Model.Description</p>
            </div>
        </div>
</div>
@model EcommerceApp.Application.ViewModels.AdminPanel.EmployeeVM
@{
    ViewData["Title"] = "Add Employee";
}
<center>
    <div class="col-md-6">
        <div class="card rounded">
            <div class="card-header bg-dark text-white">
                <h1>@ViewData["Title"]</h1>
                <p>Fill in the fields and create a new employee</p>
            </div>
            <div class="card-body bg-light">
                <form asp-action="AddEmployee">
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <p><input asp-for="@Model.Email" /></p>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password"></label>
                        <p><input asp-for="@Model.Password" /></p>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.FirstName"></label>
                        <p><input asp-for="@Model.FirstName" /></p>
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.LastName"></label>
                        <p><input asp-for="@Model.LastName" /></p>
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Position"></label>
                        <p><input asp-for="@Model.Position" /></p>
                        <span asp-validation-for="@Model.Position" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Employee</button>
                </form>
            </div>
        </div>
    </div>
</center>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}
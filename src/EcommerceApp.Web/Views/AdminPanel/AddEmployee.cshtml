@model EcommerceApp.Application.ViewModels.AdminPanel.EmployeeVM
@{
ViewData["Title"] = "AddEmployee";
}
<center>
    <h1>@ViewData["Title"]</h1>
    <p>Fill in the fields and create a new employee</p>
    <div class="col-md-6">
        <form asp-action="AddEmployee">
            <div class="form-group">
                <label asp-for="@Model.Email">Email: </label>
                <input asp-for="@Model.Email" />
                <p></p>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password">Password: </label>
                <input asp-for="@Model.Password" />
                <p></p>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FirstName">First Name: </label>
                <input asp-for="@Model.FirstName" />
                <p></p>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName">Last Name: </label>
                <input asp-for="@Model.LastName" />
                <p></p>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Position">Position: </label>
                <input asp-for="@Model.Position" />
                <p></p>
                <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Employee</button>
        </form>
    </div>
</center>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}
@model EcommerceApp.Application.ViewModels.EmployeeVM
@{
ViewData["Title"] = "Edit Employee Details";
}
<center>
  <h2>@ViewData["Title"]</h2>
</center>
<hr />
<span style="float:left">
  <div>
    <h4>Current data</h4>
    <dl class="dl-horizontal">
      <dt>Email:</dt>
      <dd>@Model.Email</dd>
      <dt>First Name:</dt>
      <dd>@Model.FirstName</dd>
      <dt>Last Name:</dt>
      <dd>@Model.LastName</dd>
      <dt>Position:</dt>
      <dd>@Model.Position</dd>
    </dl>
  </div>
</span>
<span style="float:center">
  <center>
    <p>Fill in the fields and edit employee details</p>
    <div class="col-md-6">
      <form asp-action="EditEmployee">
        <div class="form-group">
          <label asp-for="@Model.Email">Email: </label>
          <input asp-for="@Model.Email" />
          <p></p>
          <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="@Model.Password">Password: </label>
          <input asp-for="@Model.Password" />
          <p>(Leave blank if you don't want to change)</p>
          <p></p>
          <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="@Model.FirstName">First Name: </label>
          <input asp-for="@Model.FirstName" />
          <p></p>
          <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="@Model.LastName">Last Name: </label>
          <input asp-for="@Model.LastName" />
          <p></p>
          <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="@Model.Position">Position: </label>
          <input asp-for="@Model.Position" />
          <p></p>
          <span asp-validation-for="@Model.Position" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </form>
    </div>
  </center>
</span>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}
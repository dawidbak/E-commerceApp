@model EcommerceApp.Application.ViewModels.EmployeePanel.ProductVM
@{
ViewData["Title"] = "Edit Product Details";
}
<center>
    <h2>@ViewData["Title"]</h2>
</center>
<hr />
<span style="float:left">
    <div>
        <h4>Current data</h4>
        <dl class="dl-horizontal">
            <dt><label asp-for="@Model.Name"></label></dt>
            <dd>@Model.Name</dd>
            <dt><label asp-for="@Model.Description"></label></dt>
            <dd>@Model.Description</dd>
            <dt><label asp-for="@Model.UnitPrice"></label></dt>
            <dd>@Model.UnitPrice</dd>
            <dt><label asp-for="@Model.UnitsInStock"></label></dt>
            <dd>@Model.UnitsInStock</dd>
            <dt><label asp-for="@Model.CategoryName"></label></dt>
            <dd>@Model.CategoryName</dd>
            <dt><label asp-for="@Model.ImageUrl"></label></dt>
            @if(Model.ImageUrl == "No photo available")
            {
            <dd>@Model.ImageUrl</dd>
            }
            else
            {
            <dd><img src="@Model.ImageUrl" width="256" height="256" /></dd>
            }
        </dl>
    </div>
</span>
<span style="float:center">
    <center>
        <div class="col-md-6">
            <p>Fill in the fields and edit product details</p>
            <form asp-action="EditProduct" enctype="multipart/form-data">
                <partial name="_ProductFormPartial" />
                <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
        </div>
    </center>
</span>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}